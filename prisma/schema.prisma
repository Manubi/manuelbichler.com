datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// the usermanagement is done in clerk.dev and updated via a webhook
// that's also the reason why the id is String and not Int
model User {
  id              String      @id @unique
  username        String?
  profileImageUrl String?
  guestbook       Guestbook[]
}

model Guestbook {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId    String
  message   String
  createdAt DateTime @default(now())

  @@index([userId])
}